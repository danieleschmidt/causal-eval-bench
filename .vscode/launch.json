{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI App",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/causal_eval/main.py",
      "args": ["--host", "0.0.0.0", "--port", "8080", "--reload"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/venv/bin/python"
    },
    {
      "name": "Debug Tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${workspaceFolder}/tests/",
        "-v",
        "--tb=short",
        "-s"
      ],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": false,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug Current Test File",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v",
        "--tb=short",
        "-s"
      ],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": false,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug Evaluation Script",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/run_evaluation.py",
      "args": ["--model", "gpt-4", "--task", "causal_attribution"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": false,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug Test Generation",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/generate_tests.py",
      "args": ["--domain", "medical", "--count", "10"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": false,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Current Python File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": false,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python Console",
      "type": "python",
      "request": "launch",
      "module": "code",
      "args": ["-i"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": false,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Attach to Docker Container",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ]
    }
  ],
  "compounds": [
    {
      "name": "Launch App + Debug Tests",
      "configurations": ["FastAPI App", "Debug Tests"],
      "stopAll": true
    }
  ]
}