{
  "name": "Causal Eval Bench Development",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-python.mypy-type-checker",
        "charliermarsh.ruff",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "GitHub.vscode-github-actions",
        "ms-python.pytest",
        "tamasfe.even-better-toml",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-vscode.vscode-markdown",
        "DavidAnson.vscode-markdownlint",
        "ms-vscode.test-adapter-converter",
        "ms-vscode.live-server",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-thunder-client",
        "humao.rest-client",
        "streetsidesoftware.code-spell-checker",
        "ms-vscode.vscode-github-pullrequest",
        "eamodio.gitlens",
        "donjayamanne.githistory",
        "ms-vscode-remote.remote-containers"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.ruffEnabled": true,
        "python.formatting.provider": "black",
        "python.sortImports.provider": "isort",
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "python.testing.pytestArgs": [
          "tests"
        ],
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true,
          "source.fixAll.ruff": true
        },
        "files.exclude": {
          "**/__pycache__": true,
          "**/.pytest_cache": true,
          "**/.mypy_cache": true,
          "**/.ruff_cache": true,
          "**/node_modules": true
        }
      }
    }
  },

  "forwardPorts": [8000, 5432, 6379, 8080, 9090, 3000],
  "portsAttributes": {
    "8000": {
      "label": "FastAPI Server",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    },
    "8080": {
      "label": "Documentation",
      "onAutoForward": "openPreview"
    },
    "9090": {
      "label": "Prometheus",
      "onAutoForward": "silent"
    },
    "3000": {
      "label": "Grafana",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "pip install poetry && poetry install --with dev,test,docs",
  
  "mounts": [
    "source=${localWorkspaceFolder}/.env,target=/workspaces/causal-eval-bench/.env,type=bind,consistency=cached"
  ],

  "remoteUser": "vscode",
  
  "containerEnv": {
    "PYTHONPATH": "/workspaces/causal-eval-bench",
    "ENVIRONMENT": "development"
  }
}