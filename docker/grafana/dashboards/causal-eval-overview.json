{
  "dashboard": {
    "id": null,
    "title": "Causal Eval Bench - Overview",
    "tags": ["causal-eval", "overview"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "gnetId": null,
    "graphTooltip": 0,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "30s",
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Service Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"causal-eval-api\"}",
            "legendFormat": "API",
            "refId": "A"
          },
          {
            "expr": "up{job=\"postgres\"}",
            "legendFormat": "Database",
            "refId": "B"
          },
          {
            "expr": "up{job=\"redis\"}",
            "legendFormat": "Cache",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"options": {"0": {"text": "Down"}}, "type": "value"},
              {"options": {"1": {"text": "Up"}}, "type": "value"}
            ]
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m]))",
            "legendFormat": "Total Requests/sec",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 6, "w": 9, "x": 6, "y": 0},
        "yAxes": [
          {"label": "Requests/sec", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 3,
        "title": "Response Time (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "95th percentile",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 6, "w": 9, "x": 15, "y": 0},
        "yAxes": [
          {"label": "Seconds", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 4,
        "title": "Active Evaluations",
        "type": "stat",
        "targets": [
          {
            "expr": "active_evaluations_count",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 4}
      },
      {
        "id": 5,
        "title": "Evaluation Success Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(evaluations_total{status=\"success\"}[5m])) / sum(rate(evaluations_total[5m]))",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 6, "y": 6},
        "yAxes": [
          {"label": "Percentage", "min": 0, "max": 1},
          {"show": false}
        ]
      },
      {
        "id": 6,
        "title": "Error Rate by Status Code",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"4..\"}[5m])) by (status)",
            "legendFormat": "4xx - {{status}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m])) by (status)",
            "legendFormat": "5xx - {{status}}",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 18, "y": 6}
      },
      {
        "id": 7,
        "title": "Model Performance Overview",
        "type": "table",
        "targets": [
          {
            "expr": "avg(model_accuracy_score) by (model_name)",
            "legendFormat": "{{model_name}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 8,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "db_connections_active",
            "legendFormat": "Active",
            "refId": "A"
          },
          {
            "expr": "db_connections_max",
            "legendFormat": "Max",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      },
      {
        "id": 9,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "Memory Usage (MB)",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 20}
      },
      {
        "id": 10,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[5m]) * 100",
            "legendFormat": "CPU Usage (%)",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 20}
      }
    ]
  }
}